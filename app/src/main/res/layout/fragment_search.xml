<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SearchFragment">

    <SearchView
            android:id="@+id/fragment_search_sv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_search_tl_targets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/fragment_search_sv_search"
            app:tabTextAppearance="@style/TabTextNormalCaps" />

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_search_vp_targets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/fragment_search_tl_targets" />

</RelativeLayout>